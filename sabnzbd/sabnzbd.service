[Unit]
Description=Sabnzbd container
After=docker.service

[Service]
Restart=always
RestartSec=10
ExecStartPre=-/usr/bin/docker rm sabnzbd_run
ExecStart=/usr/bin/docker run --volumes-from sabnzbd_config --volumes-from media_data -p 9090:9090 -v /etc/localtime:/etc/localtime:ro --name sabnzbd_run sabnzbd
ExecStop=/usr/bin/docker stop sabnzbd_run

[Install]
WantedBy=multi-user.target
